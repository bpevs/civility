{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "scripthost"
    ],
    "noImplicitAny": true,
    "paths": {
      "lodash/*": [
        "node_modules/@types/lodash-es/*"
      ],
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
      "node_modules",
      "**/*dist/**/*",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.test.js",
      "**/*.test.jsx"
    ],
    "include": [ "./packages/**/*" ]
}
