.button,
button,
input[type="submit"],
input[type="reset"],
input[type="button"]
  background-color transparent
  border-radius 4px
  border 1px solid #bbb
  box-sizing border-box
  color #555
  cursor pointer
  display inline-block
  font-weight 600
  font-size 11px
  height 38px
  padding 0 30px
  letter-spacing .1rem
  line-height 38px
  text-align center
  text-transform uppercase
  text-decoration none
  white-space nowrap

  &:hover,
  &:focus
    color #333
    border-color #888
    outline 0
