{
  "name": "civility",
  "version": "0.0.6",
  "author": "Ben Pevsner",
  "main": "index.js",
  "license": "UNLICENSED",
  "description": "A library for making websites and applications",
  "homepage": "https://github.com/ivebencrazy/civility#readme",
  "bugs": "https://github.com/ivebencrazy/civility/issues",
  "repository": "git+https://github.com/ivebencrazy/civility.git",
  "scripts": {
    "build": "lerna run build --parallel",
    "default": "lerna bootstrap --ci && run-p test build --aggregate-output",
    "prestart": "npm link",
    "start": "lerna run start --parallel",
    "test": "run-p --aggregate-output test:lint test:unit",
    "test:coverage": "npm run test:unit -- --coverage",
    "test:lint": "tslint --project ./tsconfig.json",
    "test:unit": "jest --env=jsdom --colors"
  },
  "dependencies": {
    "@civility/utilities": "0.0.6",
    "@types/react-dom": "^16.0.5",
    "basscss": "^8.0.4",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^23.3.9",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lerna": "^3.4.3",
    "npm-run-all": "^4.1.2",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.3.2",
    "redux-mock-store": "^1.5.1",
    "stylus": "^0.54.5",
    "ts-jest": "^23.10.4",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm-run-all test:lint build",
      "pre-publish": "npm-run-all test build"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "dist",
      ".d.ts$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "setupFiles": [
      "<rootDir>/jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "**/*.test.(js|jsx)"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
