{
  "name": "civility",
  "version": "0.0.0",
  "author": "Ben Pevsner",
  "main": "index.js",
  "license": "UNLICENSED",
  "description": "A library for making websites and applications",
  "homepage": "https://github.com/ivebencrazy/civility#readme",
  "bugs": "https://github.com/ivebencrazy/civility/issues",
  "repository": "git+https://github.com/ivebencrazy/civility.git",
  "scripts": {
    "build": "lerna run build --parallel",
    "deploy": "run-p test build --aggregate-output",
    "prestart": "npm link",
    "start": "lerna run start --parallel",
    "test": "run-p --aggregate-output test:lint test:unit",
    "test:lint": "tslint --project ./tsconfig.json",
    "test:unit": "jest --env=jsdom --colors",
    "test:coverage": "npm run test:unit -- --coverage"
  },
  "dependencies": {
    "basscss": "^8.0.4",
    "lodash-es": "^4.17.7",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/jest": "^22.2.2",
    "@types/lodash-es": "^4.17.0",
    "@types/react": "^16.0.40",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "husky": "^0.15.0-rc.13",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "lerna": "^2.9.0",
    "npm-run-all": "^4.1.2",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.2.0",
    "redux-mock-store": "^1.5.1",
    "stylus": "^0.54.5",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm-run-all test:lint build"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "dist"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFiles": [
      "<rootDir>/jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "**/*.test.(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!lodash-es/.*)"
    ]
  }
}
