{
  "name": "civility",
  "version": "0.1.0",
  "author": "Ben Pevsner",
  "main": "index.js",
  "license": "MIT",
  "description": "A library for making websites and applications",
  "homepage": "https://github.com/ivebencrazy/civility#readme",
  "bugs": "https://github.com/ivebencrazy/civility/issues",
  "repository": "git+https://github.com/ivebencrazy/civility.git",
  "scripts": {
    "build": "lerna run build",
    "default": "lerna bootstrap --ci && npm run build && npm run test:lint && npm run test:ci",
    "prestart": "npm link",
    "start": "lerna run start --parallel",
    "test": "run-p --aggregate-output test:lint test:unit",
    "test:coverage": "npm run test:unit -- --coverage",
    "test:ci": "jest --env=jsdom --colors --ci --maxWorkers=1",
    "test:lint": "tslint --project ./tsconfig.json",
    "test:unit": "jest --env=jsdom --colors",
    "test:watch": "jest --env=jsdom --colors --watch"
  },
  "dependencies": {
    "@civility/utilities": "0.1.0",
    "basscss": "^8.0.10",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.11",
    "@types/react-dom": "^16.0.11",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lerna": "^3.5.1",
    "npm-run-all": "^4.1.5",
    "raf": "^3.4.1",
    "react-test-renderer": "^16.6.3",
    "stylus": "^0.54.5",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm-run-all test:lint build",
      "pre-publish": "npm-run-all test build"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "dist",
      ".d.ts$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "setupFiles": [
      "<rootDir>/jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "**/*.test.(js|jsx)"
    ],
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    }
  }
}
