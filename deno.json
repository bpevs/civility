{
  "name": "@bpev/civility",
  "exports": {
    ".": "./src/mod.ts",
    "./cli": "./scripts/cli.ts"
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "esnext"
    ]
  },
  "fmt": {
    "singleQuote": true,
    "proseWrap": "preserve",
    "semiColons": false
  },
  "lint": {
    "exclude": ["dist"],
    "rules": {
      "exclude": ["no-import-prefix"]
    }
  },
  "tasks": {
    "build": "deno run -A build.ts",
    "cli": "deno install cli/main.ts -Afg --name=civility"
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2",
    "autoprefixer": "npm:autoprefixer@^10.4.21",
    "esbuild": "npm:esbuild@^0.25.10",
    "lit": "npm:lit@^3.3.1",
    "postcss": "npm:postcss@^8.5.4",
    "postcss-import": "npm:postcss-import@^16.1.0"
  }
}
