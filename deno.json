{
  "name": "@bpev/civility",
  "exports": {
    "./cli": "./scripts/cli.ts"
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "esnext"
    ]
  },
  "fmt": {
    "singleQuote": true,
    "proseWrap": "preserve",
    "semiColons": false
  },
  "lint": {
    "exclude": ["dist"]
  },
  "tasks": {
    "build": "deno run -A build.ts"
  },
  "imports": {
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.1",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2",
    "autoprefixer": "npm:autoprefixer@^10.4.21",
    "esbuild": "npm:esbuild@^0.25.10",
    "postcss": "npm:postcss@^8.5.4",
    "postcss-import": "npm:postcss-import@^16.1.0"
  }
}
