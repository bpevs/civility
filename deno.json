{
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "esnext"
    ]
  },
  "fmt": {
    "singleQuote": true,
    "proseWrap": "preserve",
    "semiColons": false
  },
  "lint": {
    "files": {
      "exclude": ["dist"]
    }
  },
  "tasks": {
    "build": "deno run -A build.ts"
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.18",
    "autoprefixer": "npm:autoprefixer@^10.4.21",
    "postcss": "npm:postcss@^8.5.4",
    "postcss-import": "npm:postcss-import@^16.1.0"
  }
}
