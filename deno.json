{
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "singleQuote": true,
    "proseWrap": "preserve",
    "semiColons": false
  },
  "lint": {
    "files": {
      "exclude": ["dist"]
    }
  },
  "tasks": {
    "start:fresh": "(cd sandbox/fresh-site && deno run -A --watch=static/,routes/ dev.ts)",
    "start:client": "(cd sandbox/client-site && deno run -A build.ts --watch)"
  },
  "imports": {
    "civility": "./",
    "$std/": "https://deno.land/std@0.150.0/",
    "preact": "https://esm.sh/preact@10.11.0",
    "preact/": "https://esm.sh/preact@10.11.0/",

    "@dom": "./utilities/test_dom.ts",
    "deno-dom": "https://deno.land/x/deno_dom@v0.1.32-alpha/deno-dom-wasm.ts",
    "@testing-library/preact": "https://esm.sh/@testing-library/preact@3.2.2/pure?dev"
  }
}
